package {	import flash.display.*;	import flash.events.*;		public class Cover extends MovieClip {		private var currentImage:Bitmap;				public function LoadCover(info:PlaylistItem) {			currentImage = new Bitmap();			var loadHelper:LoadHelper = new LoadHelper(info.TrackInfo.Image, OnLoad, OnComplete);			loadHelper.LoadImage();		}			private function OnComplete(data:*) {			if(mcCoverHolder.numChildren  > 1) {				mcCoverHolder.removeChildAt(mcCoverHolder.numChildren - 1);			}			currentImage = data;			mcCoverHolder.addChild(currentImage);						mcCoverHolder.width = 100;			mcCoverHolder.height = 100;		}				private function OnLoad(data:*) {		}	}}