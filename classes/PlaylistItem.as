package {	import flash.display.Sprite;	import flash.display.*;	import flash.events.*;	import flash.geom.ColorTransform;	import flash.text.TextField;	public class PlaylistItem extends MovieClip {		private var isPlaying:Boolean;		private var playlist:Playlist;		private var trackInfo:Track;		private var paused:Boolean;		private var isLoaded:Boolean;				public function PlaylistItem(track:Track) {			isPlaying = false;			playlist = Player.GetPlaylist();			trackInfo = track;			IsLoaded = false;			trackTitle.text = trackInfo.TrackNum + '. ' + trackInfo.Album + ' - ' + trackInfo.Title;			addEventListener(MouseEvent.MOUSE_OVER, OnHover);			addEventListener(MouseEvent.MOUSE_OUT, OnOut);			addEventListener(MouseEvent.CLICK, OnClick);		}				public function get IsLoaded():Boolean {			return isLoaded;		}				public function set IsLoaded(value:Boolean) {			isLoaded = value;		}				public function get TrackInfo() {			return trackInfo;		}				public function get IsPlaying() {			return isPlaying;		}		public function get Paused() {			return paused;		}				public function set Paused(value:Boolean) {			paused = value;		}				public function set IsPlaying(value:Boolean) {			isPlaying = value;		}				function OnHover(item:*):void {			if(!isPlaying) {				var color:ColorTransform = new ColorTransform();				color.color = 0xFFFFFF;				mcBackground.transform.colorTransform = color;			}		}				function OnOut(item:*):void {			if(!isPlaying) {				var color:ColorTransform = new ColorTransform();				color.color = 0xCCCCCC;				mcBackground.transform.colorTransform = color;			}		}				function Stop() {			trace('stoppppppp');			var color:ColorTransform = new ColorTransform();			color.color = 0xCCCCCC;			mcBackground.transform.colorTransform = color;			isPlaying = false;			Player.GetInstance().Stop();		}				function Start() {			isPlaying = true;			Player.GetInstance().Play();		}				function OnClick(item:*):void {			if(playlist.Playing != null) {				playlist.Playing.Stop();			}						if(!isPlaying) {				playlist.Playing = this;				var color:ColorTransform = new ColorTransform();				color.color = 0xEEEEEE;				mcBackground.transform.colorTransform = color;			}			Start();		}	}	}