package {	import flash.display.*;	import flash.events.*;	public class Volume extends MovieClip {		public function Volume() {			addEventListener(MouseEvent.MOUSE_DOWN, OnMouseDown); 			stage.addEventListener(MouseEvent.MOUSE_UP, OnVolumeMouseUP);					}				private function OnMouseDown(e:MouseEvent) {			addEventListener(MouseEvent.MOUSE_MOVE, OnMouseMove);					}				private function OnVolumeMouseUP(e:MouseEvent) {			removeEventListener(MouseEvent.MOUSE_MOVE, OnMouseMove);		}				private function OnMouseMove(e:MouseEvent) {			var total:Number = e.currentTarget.mouseX / e.currentTarget.width;			VolumeControl = e.currentTarget.mouseX;			Player.GetInstance().Volume(total);		}				public function set VolumeControl(value:Number) {			mcVolumeControl.width = value;		}				public function get VolumeControl():Number {			return mcVolumeControl.width / width;		}	}}