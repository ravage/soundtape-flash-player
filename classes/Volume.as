package {	import flash.display.*;	import flash.events.*;	public class Volume extends MovieClip {		public function Volume() {			btnArea.addEventListener(MouseEvent.MOUSE_DOWN, OnMouseDown); 			stage.addEventListener(MouseEvent.MOUSE_UP, OnVolumeMouseUP);					}				private function OnMouseDown(e:MouseEvent) {			btnArea.addEventListener(MouseEvent.MOUSE_MOVE, OnMouseMove);					}				private function OnVolumeMouseUP(e:MouseEvent) {			btnArea.removeEventListener(MouseEvent.MOUSE_MOVE, OnMouseMove);		}				private function OnMouseMove(e:MouseEvent) {			var total:Number = (e.target.mouseX - 1) / (e.currentTarget.width - 6);			VolumeControl = e.currentTarget.mouseX;			trace(e.currentTarget.mouseX + ' - ' + e.currentTarget.width)			trace(total);			Player.GetInstance().Volume(total);		}				public function set VolumeControl(value:Number) {				mcVolumeControl.width = value;		}				public function get VolumeControl():Number {			return mcVolumeControl.width / width;		}	}}