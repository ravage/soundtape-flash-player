package {	import flash.display.*;	import flash.events.*;		public class Scrollbar extends MovieClip {		private var scrollContent:MovieClip;		private var scrollMask:MovieClip;		private var ticks:Number;		private var max:Number;		public function Scrollbar() {			btnUp.addEventListener(MouseEvent.CLICK, OnUpClick);			btnDown.addEventListener(MouseEvent.CLICK, OnDownClick);			ticks = 0;		}				public function BindTo(content:MovieClip, mask:MovieClip) {			scrollContent = content;			scrollMask = mask;		}				private function OnUpClick(e:MouseEvent) {			if(scrollContent.y < 0) {				scrollContent.y += 16;			}		}				private function OnDownClick(e:MouseEvent) {						if(scrollContent.height > scrollMask.height) {				ticks += 16;				scrollContent.y -= 16;			}			trace(ticks + ' - ' + scrollMask.height + ' - ' + (scrollContent.height - scrollMask.height));		} 	}	}